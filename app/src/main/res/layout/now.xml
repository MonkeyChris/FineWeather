<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/now_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:layout_constraintBottom_toTopOf="@+id/now_temp"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/now_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/now_cond_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/now_jsl"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fx"
            app:layout_constraintTop_toBottomOf="@+id/now_temp"
            app:layout_constraintHorizontal_bias="0.49" />

        <TextView
            android:id="@+id/now_tgwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="体感温度"
            app:layout_constraintBottom_toTopOf="@+id/now_xdsd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/now" />

        <TextView
            android:id="@+id/now_xdsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="相对湿度"
            app:layout_constraintBottom_toTopOf="@+id/now_jsl"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/now_jsl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="降水量"
            app:layout_constraintBottom_toTopOf="@+id/now_qy"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/now_qy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="气压"
            app:layout_constraintBottom_toTopOf="@+id/now_njd"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/now_njd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="能见度"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/now_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_tgwd"
            app:layout_constraintLeft_toRightOf="@+id/now_tgwd" />

        <TextView
            android:id="@+id/now_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_xdsd"
            app:layout_constraintLeft_toRightOf="@+id/now_xdsd" />

        <TextView
            android:id="@+id/now_pcpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_jsl"
            app:layout_constraintLeft_toRightOf="@+id/now_jsl" />

        <TextView
            android:id="@+id/now_pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_qy"
            app:layout_constraintLeft_toRightOf="@+id/now_qy" />

        <TextView
            android:id="@+id/now_vis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_njd"
            app:layout_constraintLeft_toRightOf="@+id/now_njd" />

        <TextView
            android:id="@+id/now_wind_fd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="风度"
            app:layout_constraintBottom_toTopOf="@+id/now_wind_fx"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/now_wind_fx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="风向"
            app:layout_constraintBottom_toTopOf="@+id/now_wind_fl"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/now_wind_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="风力"
            app:layout_constraintBottom_toTopOf="@+id/now_wind_fs"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/now_wind_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="风速"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/now_wind_deg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_wind_fd"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fd" />

        <TextView
            android:id="@+id/now_wind_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_wind_fx"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fx" />

        <TextView
            android:id="@+id/now_wind_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_wind_fl"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fl" />

        <TextView
            android:id="@+id/now_win_spd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/now_wind_fs"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fs" />

        <TextView
            android:id="@+id/now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="实时天气"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/update_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/now_njd"
            app:layout_constraintRight_toLeftOf="@+id/now_wind_fl" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>